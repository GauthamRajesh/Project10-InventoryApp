<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pizza_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.pizzainventory.PizzaDetail">

    <TextView
        android:id="@+id/detail_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        style="@style/detailStyle"/>
    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Product Name"
        android:layout_toRightOf="@+id/detail_name_label"
        style="@style/detailStyle"/>
    <TextView
        android:id="@+id/detail_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_name_label"
        android:text="Price: "
        style="@style/detailStyle"/>
    <TextView
        android:id="@+id/detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_price_label"
        android:layout_below="@id/detail_name_label"
        style="@style/detailStyle"
        tools:text="Price"/>
    <TextView
        android:id="@+id/detail_quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/detailStyle"
        android:layout_below="@id/detail_price_label"
        android:text="Quantity: "/>
    <TextView
        android:id="@+id/detail_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_quantity_label"
        android:layout_below="@id/detail_price_label"
        tools:text="Quantity"
        style="@style/detailStyle"/>
    <TextView
        android:id="@+id/detail_sold_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/detailStyle"
        android:layout_below="@id/detail_quantity_label"
        android:text="Sold: "
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/detail_sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sold"
        style="@style/detailStyle"
        android:layout_alignBaseline="@+id/detail_sold_label"
        android:layout_alignBottom="@+id/detail_sold_label"
        android:layout_toRightOf="@+id/detail_sold_label"
        android:layout_toEndOf="@+id/detail_sold_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image: "
        android:id="@+id/detail_image_label"
        style="@style/detailStyle"
        android:layout_below="@+id/detail_sold_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/detail_image_label"
        android:layout_toRightOf="@id/detail_image_label" />
    <Button
        android:id="@+id/sale_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_image_label"
        android:text="Sale"
        android:onClick="soldProduct"/>
    <Button
        android:id="@+id/shipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received Shipment"
        android:onClick="shipmentReceived"
        android:layout_below="@id/sale_product"/>
    <Button
        android:id="@+id/delete_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Product"
        android:onClick="deleteProduct"
        android:layout_below="@id/shipment"/>
    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order More"
        android:onClick="orderProduct"
        android:layout_below="@id/delete_product"/>
</RelativeLayout>
